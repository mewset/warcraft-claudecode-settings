{
  "statusLine": {
    "type": "command",
    "command": "printf '\\uf0a9 %s' \"$(cat | jq -r '.workspace.current_dir' | xargs basename)\""
  },
  "hooks": {
    "SessionStart": [
      {
        "matcher": "startup",
        "hooks": [
          {
            "type": "command",
            "command": "sounds=(~/.claude/sounds/ready-to-serve.wav ~/.claude/sounds/ready-to-work.wav ~/.claude/sounds/we-are-ready-master.wav); nohup paplay \"${sounds[$RANDOM % ${#sounds[@]}]}\" &"
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "matcher": ".*",
        "hooks": [
          {
            "type": "command",
            "command": "sounds=(~/.claude/sounds/more-work.wav ~/.claude/sounds/ready-to-work.wav ~/.claude/sounds/huh-what.wav ~/.claude/sounds/i-dont-wanna-do-this.wav ~/.claude/sounds/we-are-ready-master.wav); nohup paplay \"${sounds[$RANDOM % ${#sounds[@]}]}\" &"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": ".*",
        "hooks": [
          {
            "type": "command",
            "command": "sounds=(~/.claude/sounds/jobs-done.wav ~/.claude/sounds/work-complete.wav ~/.claude/sounds/work-completed.wav); nohup paplay \"${sounds[$RANDOM % ${#sounds[@]}]}\" &"
          }
        ]
      }
    ]
  }
}
